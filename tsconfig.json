{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": false,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "newLine": "LF",
        "sourceMap": true,
        "paths": {
            "@/*": ["*"],
            "@helpers/*": ["helpers/*"],
            "@main/*": ["main/*"],
            "@server/*": ["server/*"]
        },
        "types": ["node", "vitest/globals", "vite/client"],
        "typeRoots": ["./types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*", "src/cli.ts"],
    "exclude": ["node_modules", "dist"]
}
