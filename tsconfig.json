{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@helpers/*": ["helpers/*"],
            "@main/*": ["main/*"],
            "@server/*": ["server/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*", "src/cli.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**.*.test.js"]
}
